<%= semantic_form_for @checklist do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>

    <%= f.semantic_fields_for :checklist_items, @checklist_items do |item| %>
      <%= render 'item_fields', :f => item %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
