<%= page_heading "#{@checklist.name}" %>

<p>
  <strong>Description:</strong>
  <%= @checklist.description %>
</p>

<% if !(@checklist_items.empty?) %>
  <table class="checklist_items">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @checklist_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

  <br>

<div class="nav_links">
  <%= link_to 'Delete Checklist', @checklist, method: :delete, data: { confirm: 'Are you sure? All items on this checklist will be deleted too.' } %> |
