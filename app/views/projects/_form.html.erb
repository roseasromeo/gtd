<%= semantic_form_for @project, :html => { class: "project_form" } do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> prohibited
        this project from being saved:
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.inputs do %>
    <% if form_location == "develop" %>
      <%= f.hidden_field :item_id, as: :hidden, value: item.id %>
    <% end %>
    <%= f.input :name, required: true, :input_html => { class: @mode }  %>
    <%= f.input :description, :input_html => { class: @mode } %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :input, :button_html => { class: "button #{@mode}", name: form_location }  %>
    <% end %>
  <% end %>
<% end %>
