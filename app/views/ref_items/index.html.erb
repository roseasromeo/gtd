<p id="notice"><%= notice %></p>

<h1>Ref Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Folder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ref_items.each do |ref_item| %>
      <tr>
        <td><%= ref_item.name %></td>
        <td><%= ref_item.description %></td>
        <td><%= ref_item.folder %></td>
        <td><%= link_to 'Show', ref_item %></td>
        <td><%= link_to 'Edit', edit_ref_item_path(ref_item) %></td>
        <td><%= link_to 'Destroy', ref_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

