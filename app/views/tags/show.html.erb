<p id="notice"><%= notice %></p>

<%= page_heading "#{@tag.name}" %>

<% if !(@tasks.empty?) %>
  <table class="tasks">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.name, project_task_path(task.project,task) %></td>
          <td><%= link_to 'Edit', edit_project_task_path(task.project,task) %></td>
          <td><%= link_to 'Delete', project_task_path(task.project,task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<%= link_to 'Edit Tag', edit_tag_path(@tag) %> |
<%= link_to 'Back to Tags', tags_path %>
