<%= semantic_form_for @tag, :html => { class: "tag_form" }   do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@tag.errors.count, "error") %> prohibited
        this tag from being saved:
      </h2>
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { class: @mode } %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :input, :button_html => { class: "button #{@mode}" }  %>
    <% end %>
  <% end %>
<% end %>
