<%= semantic_form_for [@inbox, @item], :html => { class: "item_form" } do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@item.errors.count, "error") %> prohibited
        this item from being saved:
      </h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :name, required: true, :input_html => { class: @mode } %>
    <%= f.input :description, :input_html => { class: @mode } %>
    <%= f.select(:inbox_id, options_for_select(@inboxes.map{|t| [t.name, t.id]}, @inbox.id), {}, { class: @mode }) %>
    <%= f.actions do %>
      <%= f.action :submit, as: :input, :button_html => { class: "button #{@mode}" } %>
    <% end %>
  <% end %>
<% end %>
