<p id="notice"><%= notice %></p>

<%= page_heading "#{@task.name}" %>

<p>
  <strong>Project:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Time:</strong>
  <%= Task.time_names.key(Task.times[@task.time]) %>
</p>

<p>
  <strong>Energy:</strong>
  <%= @task.energy %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @task.completed %>
</p>

<% if !(@tags.empty?) %>
  <p>
    <strong>Tags:</strong>
    <% @tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Edit Task', edit_project_task_path(@project,@task) %> | <%= link_to 'Edit Tags', edit_tags_project_task_path(@project,@task) %> | <%= link_to 'Add Another Task', new_project_task_path(@project, location_id: @location) %> |

<% if @task.completed? %>
  <%= link_to 'Mark Task Uncompleted', uncomplete_project_task_path(@project,@task) %> |
<% end %>
<% if !(@task.completed?) %>
  <%= link_to 'Mark Task Completed', complete_project_task_path(@project,@task) %> |
<% end %>
<%= link_to 'Back to Project', project_path(@project) %>
