<%= semantic_form_for [@project,task], html: { class: "tag_task_form" } do |f| %>
  <%= f.inputs do %>
    <%= f.input :id, as: :hidden, value: task.id %>
    <%= f.label "Tags", class: "tag_label" %><br />
    <%= render "tags_checkboxes", tags: @tags, task: task %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, as: :input, label: "Save Tags", button_html: { class: "button" } %>
  <% end %>
<% end %>
