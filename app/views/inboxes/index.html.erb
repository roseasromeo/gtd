<p id="notice"><%= notice %></p>

<%= page_heading "Inboxes" %>

<% if !(@inboxes.empty?) %>
  <table class="inboxes">
    <thead>
      <tr>
        <th>Inbox Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @inboxes.each do |inbox| %>
        <tr>
          <td><%= link_to inbox.name, inbox %></td>
          <% if inbox.deletable %>
            <td><%= link_to 'Edit', edit_inbox_path(inbox) %></td>
            <td><%= link_to 'Delete', inbox, method: :delete, data: { confirm: 'Are you sure? All items associated with this inbox will be reassigned to the General inbox.' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<% end %>

<div class="nav_links">
  <button class="button" type="button"><%= link_to 'New Inbox', new_inbox_path %></button>
</div>
