<p id="notice"><%= notice %></p>

<%= page_heading "#{@inbox.name} Inbox" %>

<div class="nav_links">
<%= link_to 'Edit Name', edit_inbox_path(@inbox) %> | <%= link_to 'Add Item', new_inbox_item_path(@inbox) %>
</div>

<% if !(@items.empty?) %>
  <table class="items">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, inbox_item_path(@inbox,item) %></td>
          <td><%= link_to 'Edit', edit_inbox_item_path(@inbox,item) %></td>
          <td><%= link_to 'Delete', inbox_item_path(@inbox,item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% #here goes the assign to project link %>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

  <br>

<div class="nav_links">
  <% if @inbox.deletable? %>
    <%= link_to 'Delete Inbox', @inbox, method: :delete, data: { confirm: 'Are you sure? All items associated with this inbox will be reassigned to the [DEFAULT] inbox.' } %> |
  <% end %>
  <%= link_to 'Back to Inboxes', inboxes_path %>
</div>
