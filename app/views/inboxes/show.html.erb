<p id="notice"><%= notice %></p>

<%= page_heading "#{@inbox.name} Bin" %>

<div class="nav_links">
  <button class="button <%=@mode %>" type="button"><%= link_to 'Edit Name', edit_inbox_path(@inbox) %></button>
  <button class="button <%=@mode %>" type="button"><%= link_to 'Add Item', new_inbox_item_path(@inbox) %></button>
</div>

<% if !(@items.empty?) %>
  <table class="items <%=@mode%>">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, inbox_item_path(@inbox,item) %></td>
          <td><%= link_to 'Edit', edit_inbox_item_path(@inbox,item) %></td>
          <td><%= link_to 'Delete', inbox_item_path(@inbox,item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% #here goes the assign to project link %>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

  <br>

<div class="nav_links">
  <% if !(@items.empty?) %>
    <button class="button <%=@mode %>" type="button"><%= link_to 'Process Items in Bin', develop_inbox_path(@inbox) %></button>
  <% end %>
  <% if @inbox.deletable? %>
    <button class="button <%=@mode %>" type="button"><%= link_to 'Delete Bin', @inbox, method: :delete, data: { confirm: 'Are you sure? All items associated with this inbox will be reassigned to the General bin.' } %></button>
  <% end %>
  <button class="button <%=@mode %>" type="button"><%= link_to 'Back to Bins', inboxes_path %></button>
</div>
