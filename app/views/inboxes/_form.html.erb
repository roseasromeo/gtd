<%= semantic_form_for @inbox, :html => { class: "inbox_form" } do |f| %>
  <% if @inbox.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@inbox.errors.count, "error") %> prohibited
        this inbox from being saved:
      </h2>
      <ul>
        <% @inbox.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :name, required: true, :input_html => { class: @mode } %>
    <%= f.input :description, :input_html => { class: @mode } %>
    <%= f.actions do %>
      <%= f.action :submit, as: :input, label: button_name, :button_html => { class: "button #{@mode}" } %>
    <% end %>
  <% end %>
<% end %>
