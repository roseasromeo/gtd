<p id="notice"><%= notice %></p>

<h1>Print Checklists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @print_checklists.each do |print_checklist| %>
      <tr>
        <td><%= print_checklist.name %></td>
        <td><%= print_checklist.description %></td>
        <td><%= print_checklist.user %></td>
        <td><%= link_to 'Show', print_checklist %></td>
        <td><%= link_to 'Edit', edit_print_checklist_path(print_checklist) %></td>
        <td><%= link_to 'Destroy', print_checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Print Checklist', new_print_checklist_path %>
